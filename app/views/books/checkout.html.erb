<table>
  <thead>
    <tr>
      <th>Library_id</th>
      <th>Books name</th>
      <th>Author</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @bks.each do |book| %>
      <tr>
        <td><%= book.library_id%></td>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.language %></td>
        </tr>
    <% end %>
  </tbody>
</table>
