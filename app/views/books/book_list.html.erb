<%= search_form_for @q, url: :book_list_books do |form |%>
<div>
<%= form.label :name %>
<%= form.search_field :name_cont, class: "form-control" %>
</div>
<div class= "form-group">
<%= form.submit class: "btn btn-primary btn-lg" %>
</div>
<% end %>
<table>
  <thead>
    <tr>
      <th>Library_id</th>
      <th>Books name</th>
      <th>Author</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.library_id%></td>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.language %></td>
        <td><%= link_to 'Show', book_detail_book_path(book) %></td>
        </tr>
    <% end %>
  </tbody>
</table>