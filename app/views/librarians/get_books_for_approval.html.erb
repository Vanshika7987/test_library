<table>
  <thead>
    <tr>
      <th>Student name</th>
      <th>Student id</th>
      <th>Books name</th>
      <th>Author</th>
      <th>Language</th>
      <th>approve</th>
      <th>ignore</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @requests.each do |request| %>
      <tr id = '<%= request.id %>' >
      <div class = "container">
        <td><%= request.student.name %></td>
        <td><%= request.student_id %></td>
        <td><%= request.book.name %></td>
        <td><%= request.book.author %></td>
        <td><%= request.book.language %></td>
        <td><%= request.request_for %></td>
        <td class = 'approve'><button>approve</button></td>
        <td class = 'ignore'><button>ignore</button></td>
        </div>
        </tr>
    <% end %>
  </tbody>
</table>